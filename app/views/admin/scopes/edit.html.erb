<h2>Редактировать область применения</h2>
<h3><%= @scope.name %></h3>

<%= form_for @scope, url: {action: "update", id: @scope.id} do |f| %>
  <%= label_tag(:name, "Название:") %>
  <%= f.text_field :name, class: 'form-control' %><br><br>
  <%= f.submit "Сохранить", class: 'btn btn-info' %>
<% end %>
