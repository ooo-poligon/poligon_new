<h1>Статический контент</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Directory</th>
      <th>Page</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @static_contents.each do |content| %>
      <tr>
        <td><%= content.id %></td>
        <td><%= content.title %></td>
        <td><%= content.directory %></td>
        <td><%= content.page %></td>
        <td>
          <%= link_to "Редактировать", edit_admin_static_content_path(content), class: "btn btn-sm btn-success" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>