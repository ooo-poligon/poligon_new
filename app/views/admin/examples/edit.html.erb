<h2>Редактировать пример применения</h2>
<h3><%= @example.title %></h3>

<%= form_for @example, url: {action: "update", id: @example.id} do |f| %>
  <div>
    <% f.object.example_images.each_with_index do |image, index| %>
      <div style="display: inline-block;">
          <%= image_tag(image.url) %><br>
          <%#= link_to "Удалить", admin_example_example_image_path(f.object.id, index), :method => :delete,
                      data: { confirm: "Вы уверены?" } %>
      </div>
    <% end %>
  </div>
  <br><br>
  <%= label_tag(:example_images, "Изображения:") %><br>
  <%= f.file_field :example_images, multiple: true %><br><br>
  <%= label_tag(:title, "Название:") %>
  <%= f.text_field :title, class: 'form-control' %><br><br>
  <%= label_tag(:scope_id, "Область применения:") %>
  <%= f.collection_select(:scope_id, Scope.all, :id, :name, class: 'form-control') %><span>&nbsp;&nbsp;</span>
  <%= label_tag(:product_id, "Устройство:") %>
  <%= f.collection_select(:product_id, Product.available.order(:title), :id, :title, class: 'form-control') %><br><br>
  <%= label_tag(:issue, "Задача:") %>
  <%= f.text_area :issue, size: "160x12", class: 'form-control' %><br><br>
  <%= label_tag(:issue, "Решение:") %>
  <%= f.text_area :solution, size: "160x12", class: 'form-control' %><br><br>
  <%= f.label 'Теги (через запятую):' %>
  <%= f.text_area :tags, value: @tags_string, class: "form-control", style: "height: 87px;" %><br><br>
  <%= f.submit "Сохранить", class: 'btn btn-info' %>
<% end %>
