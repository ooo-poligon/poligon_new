<h1>Редактирование настройки</h1>

<%= form_for @setting, url: {action: "update"}, method: :patch, :html => {:multipart => true} do |f| %>

    <p>
      <%= f.label "Название" %>
      <%= f.text_field :title, class: "form-control", disabled: true %>
    </p>
    
    <br>
    <p>
      <%= f.label "Значение" %>
      <%= f.text_field :text_value, class: "form-control" %>
    </p>

    <br>
    <%= f.submit "Редактировать настройку", class: "btn btn-success" %>
<% end %>