<%= render "shared/breadcrumb_search", locals: {for: "publications", item: @review} %>
<p id="notice"><%= notice %></p>
<% title = @review.title %>
<% generate_meta_from title %>
<h1><%= title %></h1>
<p>
  <%= @review.content .html_safe
      .gsub('href="/PDF', 'href="/PDF')
      .gsub('src="/js', 'src="/js')
      .gsub('src="/images', 'src="/images')
      .gsub('<img', '<img class="img-responsive" ')
      .html_safe %>
</p>

<%= render 'shared/article_footer', locals: { item: @review } %>
