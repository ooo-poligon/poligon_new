<div class="apply">
  <div class="container">
    <div class="row breadcrumbs">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <%= link_to 'Решения и примеры применения!', examples_index_path %>
          </li>
          <li class="breadcrumb-item">
            <%= @example.title %>
          </li>
        </ol>
      </nav>
    </div>

    <div class="apply-item">
      <div class="apply-title">
        <h1><%= @example.title %></h1>
      </div>
      <div class="apply-item-photos">
        <div class="row">
          <% @example.example_images.each do |image| %>
            <div class="col-sm-6 col-md-3 apply-item-photo">
              <%= link_to image_tag(image.url, class: "img-responsive center-block product-image-container"),
                          image.url, class: "fancybox", data: {rel: "lightcase:app"} %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="apply-item-info">
        <div class="row">
          <div class="col-sm-4">
            <ul class="apply-item-list">
              <li><strong>Область применения:</strong> <%= @example.scope.name %></li>
            </ul>
          </div>
          <div class="col-sm-4">
            <ul class="apply-item-list">
              <li><strong>Товарная группа:</strong>
                <%= link_to @example.product.category.title, category_path(@example.product.category.id) %>
              </li>
              <% if @example.product.article.nil?  or @example.product.article == '' %>
                <% product_name = @example.product.title %>
              <% else %>
                <% product_name = ' (' + @example.product.article + ') ' + @example.product.title %>
              <% end %>
              <li><strong>Изделие:</strong>
                <%= link_to product_name, product_path(@example.product.id) %>
              </li>
              <li><strong>Тех документация:</strong>
                <% product_pdf = DataFile.where("owner_id = ? and file_type_id = 2", @example.product.id).first %>
                <% if product_pdf != nil and product_pdf.path != "c:\\poligon_datasheets\\" and product_pdf.path != "\\\\Server03\\бд_сайта\\poligon_datasheets\\" %>
                  <%= link_to( product_pdf.name, content_download_pdf_path(product_id: @example.product.id)) %>
                <% end %>
              </li>
              <li><strong>Теги: </strong>
                <%= @tags_string %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="apply-item-description">
        <div class="row">
          <div class="col-sm-2"><strong>Задача:</strong></div>
          <div class="col-sm-10">
            <%= @example.issue %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-2"><strong>Решение:</strong></div>
          <div class="col-sm-10">
            <%= @example.solution %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-2"><strong>Преимущества:</strong></div>
          <div class="col-sm-10">
            <%= @example.product.advantages %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
