<% product = locals[:product] %>
<% product_image = product.image_name_1 %>
<% vendorFolder = Vendor.where('id = ?', product.vendor_id).first %>
<% if !product_image.nil? and product_image != '' %>
  <% image_path = "/images/catalog/" + (vendorFolder.folder_name).to_s + "/devices/"+ (product.image_name_1).to_s %>
<% else %>
  <% image_path = "nophoto.png" %>
<% end %>
<%= link_to image_tag(image_path, class: "img-responsive center-block product-image-container"), product_path(product.id) %>