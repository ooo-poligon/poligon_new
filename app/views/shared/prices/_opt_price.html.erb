<tr class="success">
  <td style="text-align:left">
    Оптовая:
  </td>
  <td style="text-align:left">
    -<%= ((1-get_prices_eur(product)[3]/get_prices_eur(product)[0])*100).round(2) %>%
  </td>
  <td style="color: blue; text-align:right;">
    <% unless product.currency_id == 2 %>
  <button class="clipboard-btn btn btn-xs btn-outline-primary copy-btn" data-clipboard-text="<%= article_text %><%= product.title %> — Оптовая цена: <%= get_prices_eur(product)[3].round(2) %> евро c НДС. <%= information_on_the_availability %>">
    &euro;<%= get_prices_eur(product)[3].round(2) %>
    </button>
    <% end %>
  </td>
  <td style="color: green; text-align:right; ">
  <button class="clipboard-btn btn btn-xs btn-outline-primary copy-btn" data-clipboard-text="<%= article_text %><%= product.title %> — Оптовая цена: <%= get_prices_rub(product)[3].round(2) %> рублей c НДС. <%= information_on_the_availability %>">
    <%= get_prices_rub(product)[3].round(2) %>р.
    </button>
  </td>
  <td style="color: brown; text-align:right; ">
  <button class="clipboard-btn btn btn-xs btn-outline-primary copy-btn" data-clipboard-text="<%= article_text %><%= product.title %> — Оптовая цена: <%= (get_prices_rub(product)[3] / 1.20).round(2) %> рублей без НДС. <%= information_on_the_availability %>">
    <%= (get_prices_rub(product)[3] / 1.20).round(2) %>р.
    </button>
  </td>
</tr>