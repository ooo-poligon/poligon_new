      <div class="row footer-top">
        <div class="hidden-sm col-sm-4 footer-search">
          <form method="get" action="/search">
            <input type="text" name="q" placeholder="поиск по всему сайту">
            <button type="submit">Найти</button>
          </form>
        </div>
        <div class="col-sm-12 col-md-8 col-lg-offset-1 col-lg-7">
          <div class="row footer-sign">
            <%= form_tag(feedback_subscribe_path, method: "POST") do %>
              <div class="col-sm-6 col-md-6 footer-sign-block">
                <!--<input type="text" placeholder="e-mail">-->
                <%= text_field_tag 'email', nil, placeholder: "e-mail" %>
