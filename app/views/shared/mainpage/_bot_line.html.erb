<% empty_class = @current_cart.line_items.count.zero? ? "empty" : "" %>
<div class="bot-line <%= empty_class %>">
  <div class="container">
    <a href="#header" id="to-top"><span></span> Наверх</a>
    <div class="bot-cart">
      <%= link_to render("shared/cart_quantity"),
                  cart_path(@current_cart.id),
                  {remote: true, 'data-toggle' =>  "modal", 'data-target' => '#quick-cart'}
      %>
      <div class="bot-sum"><%= render("shared/cart_sum") %></div>
    </div>
  </div>
</div>