<%
  articles = Article.where(main_page: 1).order("position ASC").limit(10)
%>
<div class="main-articles">
  <div class="container">
    <h2>Статьи и обзоры</h2>
    <div class="row">
      <% articles.each do |article| %>
      <div class="col-xs-6 col-md-5ths">
        <div class="art-item">
          <div class="art-photo"><%= link_to image_tag(article.image, height: 150), article_path(article) %></div>
          <div class="art-title"><%= link_to article.title, article_path(article) %></div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="view-all"><a href="/articles">Посмотреть всё</a></div>
  </div>
</div>