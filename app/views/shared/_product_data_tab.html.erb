<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <h3>Количество:</h3>
      <%= render partial: 'shared/product_quantities_table', locals: {product: @product } %>
      <h3 style="display: inline;">Срок поставки:</h3>
        <span style="font-size: 14px; color: green; float: right; padding-top: 4px; padding-right: 10px;"><%= @product.delivery_time %>.</span>
    </div>
    <div class="col-md-8">
      <% unless (@product.base_price == 0 )%>
        <h3>Цены:</h3>
        <%= render partial: 'shared/product_prices_table_header' %>
        <%= render partial: 'shared/product_prices_table', locals: {product: @product} %>
      <% else %>
        <p>
          <b style="font-size: 12px; color: red; font-weight: bolder;">Цена не установлена.</b>
        </p>
      <% end %>
    </div>
  </div>
</div>
