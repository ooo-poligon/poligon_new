          <li><a href=<%= company_about_path %>> <i class="glyphicon glyphicon-saved"></i>  О компании</a></li>
          <li><a href=<%= certificates_index_path %>> <i class="glyphicon glyphicon-certificate"></i>  Сертификаты</a></li>
          <li><a href=<%= feedback_booklets_path %>> <i class="glyphicon glyphicon-book"></i>  Буклеты и каталоги</a></li>
          <li><a href=<%= company_vacancies_path %>> <i class="glyphicon glyphicon-bullhorn"></i>  Список вакансий</a></li>
          <li><a href=<%= feedback_mailing_list_path %>><i class="glyphicon glyphicon-envelope"></i>  Рассылка новостей</a></li>
          <li class="divider"></li>
          <li><%= link_to 'Обмен ссылками', company_links_path %></li>
          <li><%= link_to 'Карта сайта', sitemap_path %></li>
          <li><%= link_to 'Контакты', company_contacts_path %></li>
          <li class="divider"></li>
          <li>
            <% if user_signed_in? %>
              <%= link_to 'Выйти из служебного интерфейса', destroy_user_session_path, :method => :get %>
            <% else %>
              <%= link_to 'Служебный вход', new_user_session_path %>
              <%#= link_to 'Зарегистрироваться', new_user_registration_path %>
            <% end %>
          </li>
        </ul>
      </li>
      <li>
        <%= link_to '<span class="shopping-cart"><i class="glyphicon glyphicon-shopping-cart"></i>  Корзина</span>'.html_safe,
                      cart_path(@current_cart.id),
                      {remote: true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %>
      </li>
      <li>
        <%= link_to '(812) 325-42-20', company_contacts_path, class: "phone" %>
      </li>
    </ul>
  </div><!--/.nav-collapse -->
</div>
