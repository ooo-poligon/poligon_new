<style type="text/css">
  .navbar-default {
    background-image: linear-gradient(to bottom, #27498d 0%, #5a8aea 100%);
  }
  .navbar-default .navbar-nav > .open > a,
  .navbar-default .navbar-nav > .active > a {
    background-image: linear-gradient(to bottom, #5a8aea 0%, #5a8aea 100%);
  }
  .dropdown-menu {
    background-color: #5a8aea;
  }
</style>

<div class="container-fluid">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" style="margin-bottom: 5px; margin-top: -10px" href=<%= root_path %>><%= image_tag('logo/poligon_logo_185w.png', class: 'poligon-logo', alt: 'Компания "ПОЛИГОН"') %></a>
  </div>
  <div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
      <li><%= link_to 'Новости', news_items_path %></li>
      <li><%= link_to 'Публикации', publications_index_path %></li>
      <li><%= link_to 'Каталог', categories_path %></li>
      <% unless user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Поиск <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li>
              <form class="navbar-search pull-left" method="get" action="/search">
              <input type="text" class="search-query search_form" name="q" placeholder="поиск">
              </form>
            </li>
          </ul>
        </li>
      <% end %>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li><a href=<%= offers_index_path %>> <span class="special-offers"><i class="glyphicon glyphicon-flash"></i>  Специальные предложения</span></a></li>
