<% if @functions.size > 0 %>
<br>
<table class="table-responsive">
  <thead>
    <tr>
      <th colspan="2" style="background-color: #CCCCCC;
    font-family: Arial,Helvetica,sans-serif;
    font-size: 14px;
    font-weight: bold;
    text-align: left; padding: 5px;">Описание функций</th>
    </tr>
  </thead>
    <tbody>
    <% @functions.each do |f| %>
      <tr>
        <td>
          <strong><%= f.title %> (<b><%= f.symbol %></b>)</strong>
          <p><%= f.description %></p>
        </td>
        <% alt = "" %>
        <% alt = "Реле времени - #{f.title}" if @product.vendor.title == "TELE" %>
        <td> <img src="https://poligon.info/images/catalog/TELE/funcs/<%= f.picture_name %>" class= "img-responsive center-block" style="max-width: 260px;" alt="<%= alt %>" /></td>
      </tr>
    <% end %>
    </tbody>
</table>
<% end %>