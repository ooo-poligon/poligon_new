<% if user_signed_in? %>
  <!-- 1 means dealer group -->
  <!-- 2 means marketing group -->
  <!-- 3 means sales group -->
  <!-- 4 means director group -->
  <% article_text = "" %>
  <% if product.article.nil? or product.article == "" %>
  <% article_text = "" %>
  <% else %>
  <% article_text = "(" + product.article + ") " %>
  <% end %>

  <% information_on_the_availability = "Информация по сроку поставки требует уточнения у поставщика." %>
    <% if (product.stock - product.reserved) > 0 %>
    <% information_on_the_availability = "Наличие на складе: " + (product.stock - product.reserved).to_s + " шт." %>
  <% else %>
    <% unless product.delivery_time.nil? %>
      <% information_on_the_availability = "Срок поставки: " + (product.delivery_time) + "." %>
    <% end %>
  <% end %>



  <% if product.currency_id == 1 %>
      <table class="table table-condensed table-responsive prices-table">
      <tbody>
        <% if current_user.group_id == 1 or current_user.group_id == 2 or current_user.group_id == 3%>
        <tr class="warning">
          <% unless get_prices_eur(product)[1].round(2) == 0 %>
            <td width="21%" style="color: red; font-weight: bold; text-align:left">
              Специальная:
            </td>
            <td width="10%" style="text-align:left">
              -<%= ((1-get_prices_eur(product)[1]/get_prices_eur(product)[0])*100).round(2) %>%
            </td>
            <td width="23%" style="color: blue; text-align:right; ">
            <button cclass="clipboard-btn btn btn-primary btn-xs btn-block" data-clipboard-text="<%= article_text %><%= product.title %> — Специальная цена: <%= get_prices_eur(product)[1].round(2) %> евро c НДС. <%= information_on_the_availability %>">
              &euro;<%= get_prices_eur(product)[1].round(2) %>
              </button>
            </td>
            <td width="23%" style="color: green; text-align:right; ">
            <button class="clipboard-btn btn btn-xs btn-success btn-block" data-clipboard-text="<%= article_text %><%= product.title %> — Специальная цена: <%= get_prices_rub(product)[1].round(2) %> рублей c НДС. <%= information_on_the_availability %>">
              <%= get_prices_rub(product)[1].round(2) %>р.
              </button>
            </td>
            <td width="23%" style="color: brown; text-align:right; ">
            <button class="btn btn-xs btn-danger clipboard-btn btn-block" data-clipboard-text="<%= article_text %><%= product.title %> — Специальная цена: <%= (get_prices_rub(product)[1] / 1.18).round(2) %> рублей без НДС. <%= information_on_the_availability %>">
              <%= (get_prices_rub(product)[1] / 1.18).round(2) %>р.
              </button>
            </td>
          <% else %>
            <td style="text-align:left">
              Специальная:
            </td>
            <td style="text-align:left">
            </td>
            <td style="color: brown; text-align:right;">
              нет
            </td>
            <td style="color: green; text-align:right;">
            </td>
            <td style="text-align:right">
            </td>
          <% end %>
        </tr>

        <% end %>
        <% if current_user.group_id == 1 or current_user.group_id == 2 or current_user.group_id == 3 or current_user.group_id == 4 %>
        <tr class="success">
            <td style="text-align:left">
              Базовая <sup style="color: red; font-size: 7pt"><%= (get_prices_eur(product)[0]/get_prices_eur(product)[5]).round(2) %></sup>:
            </td>
            <td style="text-align:left">
            </td>
            <td style="color: blue; text-align:right;">
            <button class="clipboard-btn btn btn-primary btn-xs btn-block" data-clipboard-text="<%= article_text %><%= product.title %> — Базовая цена: <%= get_prices_eur(product)[0].round(2) %> евро c НДС. <%= information_on_the_availability %>">
              &euro;<%= get_prices_eur(product)[0].round(2) %>
              </button>
            </td>
            <td style="color: green; text-align:right; ">
            <button class="clipboard-btn btn btn-xs btn-success btn-block" data-clipboard-text="<%= article_text %><%= product.title %> — Базовая цена: <%= get_prices_rub(product)[0].round(2) %> рублей c НДС. <%= information_on_the_availability %>">
              <%= get_prices_rub(product)[0].round(2) %>р.
              </button>
            </td>
            <td width="25%"style="color: brown; text-align:right; ">
            <button class="btn btn-xs btn-danger clipboard-btn btn-block" data-clipboard-text="<%= article_text %><%= product.title %> — Базовая цена: <%= (get_prices_rub(product)[0] / 1.18).round(2) %> рублей без НДС. <%= information_on_the_availability %>">
              <%= (get_prices_rub(product)[0] / 1.18).round(2) %>р.
              </button>
            </td>
        </tr>
        <% end %>
        <% if current_user.group_id == 2 or current_user.group_id == 3 or current_user.group_id == 4%>
        <tr class="warning">
            <td width="18%" style="text-align:left">
              Мелкий опт:
            </td>
            <td width="5%" style="text-align:left">
              -<%= ((1-get_prices_eur(product)[2]/get_prices_eur(product)[0])*100).round(2) %>%
            </td>
            <td width="27%" style="color: blue; text-align:right;">
            <button class="clipboard-btn btn btn-primary btn-xs btn-block" data-clipboard-text="<%= article_text %><%= product.title %> — Цена от 10 штук: <%= get_prices_eur(product)[2].round(2) %> евро c НДС. <%= information_on_the_availability %>">
              &euro;<%= get_prices_eur(product)[2].round(2) %>
              </button>
            </td>
            <td width="25%" style="color: green; text-align:right; ">
              <button class="clipboard-btn btn btn-xs btn-success btn-block" data-clipboard-text="<%= article_text %><%= product.title %> — Цена от 10 штук: <%= get_prices_rub(product)[2].round(2) %> рублей c НДС. <%= information_on_the_availability %>">
              <%= get_prices_rub(product)[2].round(2) %>р.
              </button>
            </td>
            <td width="25%" style="color: brown; text-align:right; ">
            <button class="btn btn-xs btn-danger clipboard-btn btn-block" data-clipboard-text="<%= article_text %><%= product.title %> — Цена от 10 штук: <%= (get_prices_rub(product)[2] / 1.18).round(2) %> рублей без НДС. <%= information_on_the_availability %>">
              <%= (get_prices_rub(product)[2] / 1.18).round(2) %>р.
              </button>
            </td>
        </tr>
        <% end %>
        <% if current_user.group_id == 2 or current_user.group_id == 3 or current_user.group_id == 4%>
        <tr class="success">
            <td style="text-align:left">
              Оптовая:
            </td>
            <td style="text-align:left">
              -<%= ((1-get_prices_eur(product)[3]/get_prices_eur(product)[0])*100).round(2) %>%
            </td>
